package serialization;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.io.Serializable;

public class TestSerialization {

}


class SuperCar implements Serializable {

	private static final long serialVersionUID = 1L;
	int maxSpeed;
	int maxAcceleratoin;
	
	SuperCar (int maxSpeed, int maxAcceleratoin) {
		this.maxSpeed = maxSpeed;
		this.maxAcceleratoin = maxAcceleratoin;
	}
	
	public void seriableObj () {
		try (FileOutputStream fo = new FileOutputStream("/objsStore/superCar.ser");
			ObjectOutputStream oo = new ObjectOutputStream(fo);
			) {
			SuperCar car = new SuperCar(200, 350);
			oo.writeObject(car);
		} catch (IOException e) {
			e.printStackTrace();
		} 
	}
	
	public void deSerializeObj () {
		try (FileInputStream fi = new FileInputStream("/objsStore/superCar.ser");
			ObjectInputStream oi = new ObjectInputStream(fi)) {
			SuperCar car = (SuperCar)oi.readObject();
		}
		catch (IOException e) {
			e.printStackTrace();
		}
	}
}