package stringCodingPractice;

public class ReverseString {

	public static void main(String[] args) {
		isPalendrome("nayan");
	}

	private static void reverseString (String str) {
		StringBuffer sb = new StringBuffer();
		for (int i = str.length() - 1; i >= 0; i-- ) {
			sb.append(str.charAt(i));
		}
		System.out.println(sb.toString());
	}
	
	private static void isPalendrome (String str) {
		StringBuffer sb = new StringBuffer();
		for (int i = str.length() - 1; i >= 0; i-- ) {
			sb.append(str.charAt(i));
		}
		System.out.println(sb.toString().equals(str));
	}
	
	private void isAnagram (String first, String second) {
		for (int i = 0; i < first.length(); i++) {
			Character charAt = first.charAt(i);
			second.replaceFirst(charAt.toString(), "");
		}
	}
	
}

