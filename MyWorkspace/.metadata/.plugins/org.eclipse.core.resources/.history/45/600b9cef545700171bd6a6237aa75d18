package com;

public class Test {
	
	public static void main(String args[]) {
		
		
	}
	
	public void someMethod (String prefix , String word) {
	
		if (word.length() == 1) {
			System.out.println(prefix + word);
		}
		
		for (int i = 0; i < word.length(); i++ ) {
			someMethod(prefix + word.charAt(0) , word.substring(0, i) + word.substring(i + 1, word.length()) );
		}
	}	 
}
